#add-review.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
    .modal-dialog{:role => "document"}
        .modal-content
            .modal-header
                %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                    %span{"aria-hidden" => "true"} Ã—
                %h4#myModalLabel.modal-title 
                    %i.fa.fa-commenting
                    Add Review
            
            = form_for [@meal, @review], remote: true do |f|
                .modal-body
                    // ERROR MESSAGES
                    .error_messages
                    
                    .form-group
                        = f.label :rating
                        #star-rating
                
                    .form-group
                        = f.label :comment
                        = f.text_area :comment, placeholder: 'Enter your comment here...', rows: 5, style: "resize: vertical;", class: 'form-control'
                        
                .modal-footer
                    = submit_tag 'Add Review', class: 'btn btn-primary'
                    %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Cancel
