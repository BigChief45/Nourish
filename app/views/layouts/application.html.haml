!!! 5

%html
%head
    %title 
        = "#{APP_NAME}"
    
    / Application Assets
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    
    / Bootstrap
    = stylesheet_link_tag "https://bootswatch.com/#{BOOTSTRAP_THEME}/bootstrap.min.css"
    = javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', 'data-turbolinks-track' => false
    
    / Font Awesome
    = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"

    / Dancing Script Font
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Dancing+Script'

    = csrf_meta_tags
    
    /= favicon_link_tag 'favicon.ico'
    
%body
    

    .container
        .row
            .col-md-11.col-md-offset-0.5
                // NAVBAR
                = render 'layouts/navbar'
            
                // ALERTS
                = render 'shared/alerts'

                .panel.panel-default
                    .panel-body
                        // CONTENT
                        = yield
        
                // FOOTER
                /= render 'layouts/footer'