.page-header
    %h2
        %i.fa.fa-file-text-o
        Orders
        
%table.table.table-responsive.table-striped.table-hover
    %thead
        %tr
            %th #
            %th Token
            %th Client
            %th Meal
            %th Address
            %th Status
            %th
    %tbody
        - @orders.each_with_index do |order, index|
            %tr
                %td= index + 1
                %td= order.token
                %td= order.user.name
                %td= link_to order.meal.name, order.meal
                %td= order.user.address
                %td= order.status
                %td
                    .btn-group.btn-group-xs